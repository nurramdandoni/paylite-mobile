<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/linearLayoutFooter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="parent">

        <ImageView
            android:id="@+id/image_logo"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:src="@drawable/paylitelogo"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/textview_example"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Langkah mudah memulai semuanya"
            style="@style/GreetingLogin"
            android:layout_gravity="center_horizontal" />

        <Button
            android:id="@+id/btn_login_google"
            android:layout_width="260dp"
            android:layout_height="55dp"
            android:layout_marginTop="16dp"
            android:drawableLeft="@drawable/button_icon_google_login"
            android:paddingStart="0dp"
            android:text="Masuk dengan Google"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutFooter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/textView_terms_privacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dengan Masuk, Anda setuju dengan Syarat dan Ketentuan Layanan kami dan mengakui bahwa Kebijakan Privasi kami berlaku untuk Anda."
            style="@style/tos"
            android:padding="8dp"
            android:textAlignment="center"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hak Cipta Â© 2023 Paylite"
            style="@style/GreetingLogin"
            android:maxLines="3"
            android:layout_marginTop="10dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
