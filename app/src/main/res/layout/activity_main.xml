<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/linearLayoutFooter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="parent">

        <ImageView
            android:id="@+id/image_logo"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:src="@drawable/paylitelogo"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/textview_example"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Join Paylite"
            android:textColor="@color/Text_Big"
            style="@style/GreetingLogin"
            android:layout_gravity="center_horizontal" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_login_google"
            android:layout_width="295dp"
            android:layout_height="60dp"
            android:layout_marginTop="0dp"
            android:paddingStart="30dp"
            android:paddingEnd="50dp"
            android:textColor="@color/stroke_btn"
            android:background="@drawable/button_icon_google_login_normal"
            android:text="Login With Google"
            android:textSize="16dp"
            android:fontFamily="@font/poppins_regular"
            android:drawableStart="@drawable/vector2"
            android:layout_gravity="center_horizontal"
            android:textAllCaps="false"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutFooter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/textView_terms_privacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="By signing up, you agree to our Terms of Service and acknowledge that our Privacy Policy applies to you"
            style="@style/tos"
            android:padding="8dp"
            android:textAlignment="center"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Copyright Â© 2023 Paylite"
            style="@style/tos"
            android:maxLines="3"
            android:layout_marginTop="10dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
